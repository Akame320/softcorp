    section.section-helpYou
        .container
            .section-helpYou__inner
                h2.section-helpYou__title(data-aos="fade-up") Мы поможем вашему бизнесу
                form.section-helpYou__form.form-block.form-submit(data-aos="fade-down")
                    .form-block__header
                        .section-helpYou__form-title
                            +formTitle({text: 'Оставьте заявку'})
                        .section-helpYou__form-text
                            +formText({text: 'и получите <span class="text-active">бесплатные услуги</span> от команды <span class="text-medium">Likwid</span>'})
                    .form-block__body
                        .form-block__row
                            .form-block__col
                                +input-name({placeholder: 'Как вас зовут?'})
                            .form-block__col
                                +input-email({placeholder: 'Ваш Email'})
                        .form-block__row
                            +input-area()
                    .section-helpYou__form-footer
                        .section-helpYou__form-submit
                            +input-submit({value: 'Оставить заявку'})
                        .section-helpYou__form-police
                            +formPolice({text: '*Нажимая на кнопку \"Оставить заявку\", вы соглашаетесь с <a href="police.html" class="text-link">политикой конфиденциальности</a>'})

    include sections/popup
mixin cartCol_3(object)
    //ITEM START
    .block-cart__item.block-cart__item_3(data-aos='fade-up')
        .block-cart__item-inner.block-cart__item-inner_noneBg.block-cart__item-inner_paddingSmall
            .block-cart__icon
                img(src=object.src).icon
            .block-cart__data
                .block-cart__title !{object.title}
                .block-cart__text.block-cart__text_small !{object.text}
    //ITEM END


mixin translateItem(object)
    li.section-translate-thems__item(data-aos='fade-down')
        .section-translate-thems__item-inner.popup-open
            img(src=object.src).section-translate-thems__item-img
            h4.section-translate-thems__item-title !{object.title}


mixin list(object)
    li(class=object.listClass).section-translate-price__item-list-item
        img(src=object.src).icon
        span.text !{object.title}

mixin closeList(object)
    li().section-translate-price__item-list-item
        img(src='images/content/section-translate-price/close.svg').icon
        span.text Какойто текст
