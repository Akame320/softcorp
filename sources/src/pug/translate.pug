extends base/_layout
block head
    title Бесплатные переводы
block page
    section(id='first-section').section-free-translate
        .container
            .section-free-translate__inner
                .block-intro
                    h2.block-intro__title(data-aos='fade-up' id='intro-title') Переводы любой сложности
                    .block-intro__subtitle(data-aos='fade-down' data-aos-delay='500' data-aos-anchor='#intro-title') Переводы любой сложности
                    .block-intro__form.block-intro__form_bg(data-aos='fade-down' data-aos-delay='800' data-aos-anchor='#intro-title')
                        .block-intro__row
                            .block-intro__col
                                +input-name({placeholder: 'Как вас зовут?'})
                            .block-intro__col
                                +input-email({placeholder: 'Ваш Email'})
                            .block-intro__col
                                +input-submit({value: 'Оставить заявку'})
    section.section-advantages-translate
        .container
            .section-advantages-translate__inner
                .block-cart
                    .block-cart__list
                        +cartCol_3({
                            src: 'images/content/section-advantages-translate/0.svg',
                            title: 'Цена',
                            text: 'От 200 р за страницу'
                        })
                        +cartCol_3({
                            src: 'images/content/section-advantages-translate/1.svg',
                            title: 'Языки',
                            text: 'Самая большая база профессиональных переводчиков из СНГ и носителей языка'
                        })
                        +cartCol_3({
                            src: 'images/content/section-advantages-translate/2.svg',
                            title: 'Профессионализм',
                            text: 'В штате работают узкопрофильные специалисты'
                        })
                        +cartCol_3({
                            src: 'images/content/section-advantages-translate/3.svg',
                            title: 'Культуры',
                            text: 'Перевод с учетом менталитета'
                        })
                        +cartCol_3({
                            src: 'images/content/section-advantages-translate/4.svg',
                            title: 'Deadline',
                            text: 'Сроки строго фиксируются где-то'
                        })
                        +cartCol_3({
                            src: 'images/content/section-advantages-translate/5.svg',
                            title: 'Поддержка',
                            text: 'Связь с менеджером проекта'
