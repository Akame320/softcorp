                        +translateItem({src: 'images/content/section-translate-thems/2.jpg',title: 'Техническая документация'})
                        +translateItem({src: 'images/content/section-translate-thems/3.jpg', title: 'Игры'})
                        +translateItem({src: 'images/content/section-translate-thems/4.jpg',title: 'Художественные переводы'})
